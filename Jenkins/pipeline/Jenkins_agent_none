pipeline{
    agent none
    stages{
        stage('BUILD'){
            agent{
                label 'slave2'
            }
            steps{
                echo " this is building stage in slave2"
            }
        }

        stage('TEST'){
            agent{
                label 'slave1'
            }
            steps{
                echo " this is testing stage in slave1"
            }
        }
    }
}