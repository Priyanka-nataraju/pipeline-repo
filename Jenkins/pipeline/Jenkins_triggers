pipeline{
    agent any
    triggers {
        pollSCM('* * * * *') //Accepts a cron-style string to define a regular interval at which Jenkins should check for new changes in git.

        cron('* * * * *')//define a regular interval at which the Pipeline should be re-triggered.
    }
    stages{
        stage('BUILD'){
            steps{
            echo " BUILDING......"
            echo " cron"
        
            }
        }
    }
}