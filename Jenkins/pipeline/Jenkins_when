pipeline{
    agent any

    environment{
        BRANCH = 'main'
    }

    stages{
        stage('Checkout'){
            steps{
            git branch: "${env.BRANCH}", 
            credentialsId: 'github', 
            url: 'https://github.com/Priyanka-nataraju/first-repo.git'
            }
        }

        stage('BUILD')
        {
            when{
                environment name:'BRANCH', value:'main'

            }
            steps{
                echo "BUILDING....."
            }

        }

        stage('when NOT')
        {
            when{
                not{
                environment name:'BRANCH', value:'dev'
                }

            }
            steps{
                echo "when block multiple condition....."
            }
        }

        stage('anyof')
        {
            when{
                anyof{
                    branch 'main'
                    environment name : 'BRANCH', value:'main'
                }

            }
            steps{
                echo "when anyof condition....."
            }
        }
    }
}